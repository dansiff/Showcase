// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
   engineType = "binary" // ðŸ‘ˆ force Node.js engine
}

datasource db {
  provider = "postgresql" // or "mysql" | "sqlite" | "sqlserver" | "mongodb"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id                       String                    @id @default(cuid())
  email                    String                    @unique
  name                     String?
  image                    String?
  role                     UserRole                  @default(USER)
  createdAt                DateTime                  @default(now())
  updatedAt                DateTime                  @updatedAt
  profile                  Profile?
  creator                  Creator?
  subscriptions            Subscription[]
  payments                 Payment[]
  posts                    Post[]
  // Affiliates & referrals
  affiliates               Affiliate[]
  referrals                Referral[]                @relation("UserReferrals")
  // Website Generator
  generatorSubscriptions   GeneratorSubscription[]   @relation("generatorSubscriptions")
  generatedSites           GeneratedSite[]           @relation("generatedSites")
}

model Profile {
  id      String @id @default(cuid())
  user    User   @relation(fields: [userId], references: [id])
  userId  String @unique
  bio     String?
  dob     DateTime? // optional age gate field
  createdAt DateTime @default(now())
}

model Creator {
  id            String   @id @default(cuid())
  user          User     @relation(fields: [userId], references: [id])
  userId        String   @unique
  displayName   String
  stripeAccount String?  // optional for future payouts (Stripe Connect)
  ageRestricted Boolean  @default(false) // if true, show age-gate before viewing content
  revenueSharePercent Int? // Optional creator-specific override of platform fee percentage (0-100)
  payoutCadence PayoutCadence @default(WEEKLY)
  payoutMethod  PayoutMethod  @default(STRIPE_CONNECT)
  activatedAt   DateTime @default(now())
  promoEndsAt   DateTime?
  createdAt     DateTime @default(now())
  plans         Plan[]
  contents      Content[]
  payoutRequests PayoutRequest[]
}

model Plan {
  id          String   @id @default(cuid())
  creator     Creator  @relation(fields: [creatorId], references: [id])
  creatorId   String
  name        String
  stripePriceId String  // store Stripe Price ID for recurring billing
  priceCents  Int
  currency    String   @default("usd")
  billingPeriod BillingPeriod @default(MONTH)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  subscriptions Subscription[]
}

model Subscription {
  id             String   @id @default(cuid())
  user           User     @relation(fields: [userId], references: [id])
  userId         String
  plan           Plan     @relation(fields: [planId], references: [id])
  planId         String
  stripeSubId    String   @unique
  status         SubscriptionStatus @default(active)
  currentPeriodStart DateTime?
  currentPeriodEnd   DateTime?
  cancelAtPeriodEnd  Boolean @default(false)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model Content {
  id          String   @id @default(cuid())
  creator     Creator  @relation(fields: [creatorId], references: [id])
  creatorId   String
  title       String
  body        String?  // text post or link
  storageKey  String?  // S3/object key for media
  visibility  Visibility @default(FREE) // FREE, SUBSCRIBERS, PAID
  priceCents  Int?     // only for PAID items
  createdAt   DateTime @default(now())
}

model Payment {
  id            String   @id @default(cuid())
  user          User     @relation(fields: [userId], references: [id])
  userId        String
  amountCents   Int
  currency      String   @default("usd")
  stripePaymentId String?
  metadata      Json?
  createdAt     DateTime @default(now())
}

model Post {
  id          String     @id @default(cuid())
  title       String?
  content     String
  imageUrl    String?
  videoUrl    String?
  isPremium   Boolean    @default(false)
  isPublished Boolean    @default(true)
  authorId    String
  author      User       @relation(fields: [authorId], references: [id], onDelete: Cascade)
  likes       PostLike[]
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  @@index([authorId])
  @@index([createdAt])
}

model PostLike {
  id        String   @id @default(cuid())
  postId    String
  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
  userId    String
  createdAt DateTime @default(now())

  @@unique([postId, userId])
  @@index([postId])
  @@index([userId])
}

enum UserRole {
  USER
  CREATOR
  ADMIN
  CLIENT
}

enum BillingPeriod {
  MONTH
  YEAR
}

enum SubscriptionStatus {
  active
  past_due
  canceled
  unpaid
  incomplete
}

enum Visibility {
  FREE
  SUBSCRIBERS
  PAID
}

enum PayoutCadence {
  WEEKLY
  BIWEEKLY
  MONTHLY
}

enum PayoutMethod {
  STRIPE_CONNECT
  BANK_WIRE
  PAYPAL
}

model PayoutRequest {
  id          String   @id @default(cuid())
  creator     Creator  @relation(fields: [creatorId], references: [id])
  creatorId   String
  amountCents Int?
  method      PayoutMethod
  cadence     PayoutCadence?
  status      String   @default("requested") // requested, approved, paid, rejected
  notes       String?
  createdAt   DateTime @default(now())
}

model ClientIntake {
  id                  String   @id @default(cuid())
  fullName            String
  email               String
  phone               String?
  company             String
  website             String?
  projectType         String   // website, ecommerce, landing-page, web-app, b2b-lead, other
  projectDescription  String?
  goals               String?
  targetAudience      String?
  
  // B2B Lead specific fields
  businessType        String?  // restaurant, retail, services, saas, other
  revenueModel        String?  // subscription, commission, one-time, hybrid
  paymentProcessorStatus String? // has-processor, looking-for-processor, unsure
  monthlyRevenueEstimate String? // under-1k, 1k-5k, 5k-10k, 10k-50k, 50k-plus
  commissionInterested Boolean? // interested in commission-based partnership
  referralSource      String?  // website, referral, linkedin, coldemail, local, other
  
  features            String[] // Array of selected features
  designPreferences   String?
  brandGuidelines     String?
  contentReady        String?  // ready, partial, need-help, none
  timeline            String?  // asap, 1-month, 2-3-months, flexible
  launchDate          DateTime?
  budget              String?  // under-5k, 5k-10k, 10k-25k, 25k-50k, 50k-plus, commission-only
  competitors         String?
  inspiration         String?
  additionalNotes     String?
  preferredCallDate   String?  // Preferred kickoff call date
  preferredCallTime   String?  // Preferred kickoff call time
  uploadedFiles       String[] // Array of file URLs
  termsAccepted       Boolean  @default(false)
  status              String   @default("pending") // pending, in-progress, completed, cancelled
  depositPaid         Boolean  @default(false)
  depositAmount       Int?     // in cents
  finalPaymentPaid    Boolean  @default(false)
  stripeSessionId     String?  // Stripe checkout session ID
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
}

// =========================
// Affiliates & Referrals
// =========================

model Affiliate {
  id            String   @id @default(cuid())
  code          String   @unique
  user          User?    @relation(fields: [userId], references: [id])
  userId        String?
  ratePercent   Int      @default(10) // Commission percent of net receipts
  active        Boolean  @default(true)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  referrals     Referral[]
  payouts       AffiliatePayout[]
}

model Referral {
  id              String    @id @default(cuid())
  affiliate       Affiliate @relation(fields: [affiliateId], references: [id])
  affiliateId     String
  referredUser    User?     @relation(name: "UserReferrals", fields: [referredUserId], references: [id])
  referredUserId  String?
  referredEmail   String?
  attribution     String    @default("signup") // signup, subscription, purchase
  revenueCents    Int       @default(0)
  commissionCents Int       @default(0)
  status          String    @default("tracked") // tracked, converted, paid
  meta            Json?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  @@index([affiliateId])
  @@index([referredUserId])
}

model AffiliatePayout {
  id            String    @id @default(cuid())
  affiliate     Affiliate @relation(fields: [affiliateId], references: [id])
  affiliateId   String
  amountCents   Int
  status        String    @default("requested") // requested, approved, paid
  notes         String?
  createdAt     DateTime  @default(now())
  paidAt        DateTime?

  @@index([affiliateId])
}

// =========================
// Emily MVP (single-creator)
// =========================

// Access tokens granted post-purchase (no auth required).
// A random token is issued and set as an HTTP-only cookie to gate access.
model AccessToken {
  id        String   @id @default(cuid())
  email     String
  token     String   @unique
  purpose   String   @default("emily") // scope for future creators
  createdAt DateTime @default(now())
  expiresAt DateTime?
  revoked   Boolean  @default(false)

  @@index([email])
  @@index([purpose])
}

// Simple message log for Emily's paid room.
// Messages are associated to an access token (per-buyer). Creator can also post.
model EmilyMessage {
  id        String   @id @default(cuid())
  token     String
  sender    String              // "buyer" | "creator"
  type      String   @default("text") // "text" | "image" | "audio"
  content   String?
  url       String?
  createdAt DateTime @default(now())

  @@index([token])
  @@index([createdAt])
}

// Editable sections for Emily's paid page.
model EmilyContent {
  id        String   @id @default(cuid())
  section   String   @unique
  title     String?
  body      String?
  mediaUrls String[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

}

// Restaurant menu categories
model MenuCategory {
  id          String      @id @default(cuid())
  name        String
  description String?
  displayOrder Int       @default(0)
  active      Boolean     @default(true)
  items       MenuItem[]
}

// Restaurant menu items
model MenuItem {
  id          String      @id @default(cuid())
  categoryId  String
  category    MenuCategory @relation(fields: [categoryId], references: [id])
  sku         String      @unique
  name        String
  description String?
  priceCents  Int
  available   Boolean     @default(true)
  prepTimeMins Int        @default(10)
  imageUrl    String?
  allergens   String?     // comma-separated: "dairy,gluten,nuts"
  displayOrder Int        @default(0)
  customizations CustomizationOption[]
}

// Customization options for menu items (e.g., extra cheese, no onions)
model CustomizationOption {
  id          String      @id @default(cuid())
  menuItemId  String
  menuItem    MenuItem    @relation(fields: [menuItemId], references: [id])
  name        String      // e.g., "Add guacamole", "No cilantro"
  priceCents  Int         @default(0)
  available   Boolean     @default(true)
}

model Order {
  id            String      @id @default(cuid())
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  customerName  String
  customerEmail String?
  customerPhone String
  pickupAt      DateTime
  status        String      @default("pending") // pending, confirmed, preparing, ready, completed, cancelled
  subtotalCents Int
  taxCents      Int         @default(0)
  tipCents      Int         @default(0)
  totalCents    Int
  specialInstructions String?
  estimatedReadyAt DateTime?
  items         OrderItem[]
  statusHistory OrderStatusHistory[]
  
  @@index([status, pickupAt])
  @@index([customerPhone])
}

model OrderItem {
  id            String  @id @default(cuid())
  order         Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  orderId       String
  sku           String
  name          String  // snapshot at order time
  qty           Int
  unitCents     Int
  customizations String? // JSON string of selected customizations
  specialRequest String?
}

// Order status audit trail
model OrderStatusHistory {
  id        String   @id @default(cuid())
  orderId   String
  order     Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  status    String
  note      String?
  createdAt DateTime @default(now())
  
  @@index([orderId, createdAt])
}

// Game leaderboards (Snake, Invaders)
model GameScore {
  id        String   @id @default(cuid())
  game      String
  name      String?
  score     Int
  createdAt DateTime @default(now())

  @@index([game, score])
}

// Multi-admin system for Emily (backward-compatible with EMILY_ADMIN_KEY).
// Stores individual admin accounts with email + hashed password.
model Admin {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String   // bcrypt hashed
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([email])
}

// =========================
// Website Generator Plans & Subscriptions
// =========================

enum GeneratorPlanType {
  STANDARD  // Free plan
  PRO       // Paid plan with advanced features
}

// Website Generator Plan Definitions
model GeneratorPlan {
  id                String            @id @default(cuid())
  planType          GeneratorPlanType @unique
  name              String            // "Standard" or "Pro"
  description       String?
  priceCents        Int?              // null for free plan, price in cents for pro
  stripePriceId     String?           // Stripe Price ID for recurring
  currency          String            @default("usd")
  billingPeriod     String            @default("month")
  maxSites          Int               // Number of sites user can create
  maxPages          Int               // Pages per site
  customDomain      Boolean           @default(false)
  advancedSEO       Boolean           @default(false)
  analyticsIntegration Boolean       @default(false)
  ecommerceFeatures Boolean           @default(false)
  bookingFeatures   Boolean           @default(false)
  apiAccess         Boolean           @default(false)
  prioritySupport   Boolean           @default(false)
  customCodes       Boolean           @default(false) // JS/CSS injection
  advancedTemplates Boolean           @default(false) // More templates
  formSubmissions   Int               // Max form submissions per month
  storageGb         Int               // Storage in GB
  bandwidthGb       Int               // Monthly bandwidth in GB
  isActive          Boolean           @default(true)
  createdAt         DateTime          @default(now())
  updatedAt         DateTime          @updatedAt
  subscriptions     GeneratorSubscription[]
}

// User's subscription to a generator plan
model GeneratorSubscription {
  id                String            @id @default(cuid())
  user              User              @relation("generatorSubscriptions", fields: [userId], references: [id])
  userId            String
  plan              GeneratorPlan     @relation(fields: [planId], references: [id])
  planId            String
  stripeSubId       String?           @unique  // null for free plan
  stripeCustomerId  String?
  status            String            @default("active") // active, past_due, canceled, unpaid
  currentPeriodStart DateTime?
  currentPeriodEnd  DateTime?
  cancelAtPeriodEnd Boolean           @default(false)
  createdAt         DateTime          @default(now())
  updatedAt         DateTime          @updatedAt
  sites             GeneratedSite[]
  
  @@unique([userId, planId])
  @@index([status])
}

// Generated website configurations and tracking
model GeneratedSite {
  id            String                  @id @default(cuid())
  user          User                    @relation("generatedSites", fields: [userId], references: [id])
  userId        String
  subscription  GeneratorSubscription   @relation(fields: [subscriptionId], references: [id])
  subscriptionId String
  businessName  String
  tagline       String?
  industry      String?
  siteType      String[] // Array of site types: business, ecommerce, portfolio, etc.
  colorScheme   String   @default("modern")
  layoutStyle   String   @default("modern")
  config        Json     // Full configuration object from the form
  status        String   @default("generating") // generating, completed, failed, deployed
  deployUrl     String?  // URL where the site is deployed
  previewUrl    String?  // Preview URL
  sourceCode    String?  // Path or reference to generated source code
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  deployedAt    DateTime?
  
  @@index([status])
  @@index([userId])
  @@index([createdAt])
}

