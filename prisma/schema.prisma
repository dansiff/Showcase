// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
   engineType = "binary" // ðŸ‘ˆ force Node.js engine
}

datasource db {
  provider = "postgresql" // or "mysql" | "sqlite" | "sqlserver" | "mongodb"
  url      = env("DATABASE_URL")
}

// Example model
model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
}
