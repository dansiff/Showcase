# Core (Runtime)
# Use pooled connection (6543) for serverless environments like Vercel
DATABASE_URL="postgresql://USER:PASSWORD@YOUR-PG-POOL-HOST:6543/postgres?pgbouncer=true&connection_limit=1&sslmode=require"

# Migrations/Admin (Local/CI only)
# Direct connections over 5432 for Prisma Migrate/Shadow DB
DIRECT_DATABASE_URL="postgresql://USER:PASSWORD@YOUR-PG-HOST:5432/postgres"
SHADOW_DATABASE_URL="postgresql://USER:PASSWORD@YOUR-PG-HOST:5432/postgres"
NEXT_PUBLIC_SUPABASE_URL="https://YOUR-PROJECT.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="YOUR-ANON-KEY"
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_SITE_URL="http://localhost:3000"

# Stripe
# Ensure modes match per environment (test with test, live with live)
STRIPE_SECRET_KEY="sk_test_..."
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# Auth
NEXTAUTH_SECRET="your-strong-secret"
NEXTAUTH_URL="http://localhost:3000"
# Optional OAuth
# GOOGLE_CLIENT_ID="..."
# GOOGLE_CLIENT_SECRET="..."

# Notifications (optional)
SMTP_HOST="smtp.sendgrid.net"
SMTP_PORT="465"
SMTP_USER="apikey"
SMTP_PASS="..."
SLACK_WEBHOOK_URL="https://hooks.slack.com/services/..."
DISCORD_WEBHOOK_URL="https://discord.com/api/webhooks/..."
ADMIN_EMAIL="admin@example.com"

